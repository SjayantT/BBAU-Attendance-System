<div class="container">
    <div id="loader">
        <div class="circle-loader"></div>
    </div>
</div>

<style>
    /* Fullscreen Loader */
    #loader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(255, 255, 255, 0.9);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      transition: opacity 0.5s ease, visibility 0.5s ease;
    }

    /* Hidden state after loading */
    #loader.hidden {
      opacity: 0;
      visibility: hidden;
    }

    /* Circle Loader */
    .circle-loader {
      width: 60px;
      height: 60px;
      border: 6px solid #cce5ff;
      border-top: 6px solid #007bff; /* Blue color */
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    /* Spin Animation */
    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    /* Sample content */
    body.loaded-content {
      font-family: sans-serif;
      padding: 2rem;
      text-align: center;
    }
</style>

 <script>
    window.addEventListener("load", function () {
      document.getElementById("loader").classList.add("hidden");
    });
</script>