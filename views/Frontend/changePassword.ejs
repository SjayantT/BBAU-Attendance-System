<% layout("Layouts/boilerplate") %>
<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form action="/departments/<%- courseName %>/<%- batchName %>/changePassword/success" class="card p-4 shadow" method="post">
          <h3 class="text-center mb-4">Change Password</h3>

          <!-- Faculty ID -->
          <div class="mb-3">
            <label for="facultyId" class="form-label">Faculty ID</label>
            <input type="text" class="form-control" id="facultyId" name="facultyId" required>
          </div>

          <!-- Old Password -->
          <div class="mb-3">
            <label for="oldPass" class="form-label">Old Password</label>
            <div class="input-group custom-input-group">
              <input type="password" class="form-control" id="oldPass" name="oldPass" required>
              <span class="input-group-text eye-toggle" onclick="togglePassword(this)">
                <i class="bi bi-eye-fill"></i>
              </span>
            </div>
          </div>

          <!-- New Password -->
          <div class="mb-3">
            <label for="newPass" class="form-label">New Password</label>
            <div class="input-group custom-input-group">
              <input type="password" class="form-control" id="newPass" name="newPass" required>
              <span class="input-group-text eye-toggle" onclick="togglePassword(this)">
                <i class="bi bi-eye-fill"></i>
              </span>
            </div>
          </div>

          <!-- Confirm Password -->
          <div class="mb-3">
            <label for="confirmPass" class="form-label">Confirm Password</label>
            <div class="input-group custom-input-group">
              <input type="password" class="form-control" id="confirmPass" name="confirmPass" required>
              <span class="input-group-text eye-toggle" onclick="togglePassword(this)">
                <i class="bi bi-eye-fill"></i>
              </span>
            </div>
          </div>

          <!-- Submit -->
          <button type="submit" class="btn btn-primary w-100">Verify & Proceed</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    function togglePassword(span) {
      const input = span.previousElementSibling;
      const icon = span.querySelector("i");

      if (input.type === "password") {
        input.type = "text";
        icon.classList.remove("bi-eye-fill");
        icon.classList.add("bi-eye-slash-fill");
      } else {
        input.type = "password";
        icon.classList.remove("bi-eye-slash-fill");
        icon.classList.add("bi-eye-fill");
      }
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
